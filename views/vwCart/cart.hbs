    padding: 10px 10px;
}
</style>
<div class="header" id="drop">
    {{>home/header}}
</div>
<h1 class="titlecart">Cart</h1>
{{# if products }}
    <div class="cart page">
        <ul class="list-group">
            {{# each products }}
            <li class="list-group-item clearfix">
                
                                    <img src="../../../sp/{{this.item.id}}/1.jpg" class="img-fluid" alt="Image" height="170" width="170">
                                    <div class="mask flex-center waves-effect waves-light ">
                                        <p class="card-body text-white  rgba-black-strong p-2 align-self-end">
                                            {{ProName}}</p>
                                    </div>
                            
                <div class="col-xs-5">
                    <strong>{{ this.item.Proname }}</strong><br/>
                    <em>{{{this.item.Tiny}}}</em>
                </div>
                
                    
                
                <div class="col-xs-3 text-right">
                    <pre>Số Lượng: {{ this.quantity }}
                           Tổng: {{ this.price }}</pre>
                </div>
                <div class="col-xs-2 text-right">
                    <a href="/remove/{{this.item.id}}" class="btn btn-default"></i> Remove</a>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="text-right">
        <form action="/promote-validation" method="post">
            <input type="text" id="coupon" name="coupon">
            <input class="btn btn-default" type="submit" value="Add Coupon">
        </form>
        <strong>Total: {{ totalPrice }} VND</strong>
    </div>
    <hr>
    <div class="text-right">
        
          <form action="/payment" >
    <input type="submit" value="Checkout" class="button">
</form> 
    </div>
{{ else }}
<div class="empty">
    Your shopping cart is empty.
    </div>
