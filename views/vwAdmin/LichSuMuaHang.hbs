<div class="container pt-5 pb-5">
    <div class="row text-center">
        <h2>
            Lịch sử mua hàng
        </h2>
    </div>
    <div class="row">
       <div class="row d-flex justify-content-center">
    <!-- Table with panel -->
    <div class="card card-cascade narrower">
      <!--Card image-->
      <div
        class="view view-cascade gradient-card-header blue-gradient narrower py-2 mx-4 mb-3 d-flex justify-content-center align-items-center">
        <a href="" class="white-text mx-3">DANH SÁCH SẢN PHẨM BÁN ĐƯỢC</a>
      </div>
      <!--/Card image-->
      <div class="px-4">
        {{#if this.emptyOrder}}
          <div class="card-body">
            <p class="card-text">
              Không có dữ liệu.
            </p>
          </div>
        {{else}}
          <div class="table-wrapper">
            <!--Table-->
            <table class="table table-hover mb-0">
              <!--Table head-->
              <thead>
                <tr>
                  <th class="th-lg">
                    <a>OrderDetailID</a>
                  </th>
                  <th class="th-lg">
                    <a href="">UserID</a>
                  </th>
                  <th class="th-lg">
                    <a href="">Tên KH</a>
                  </th>
                  <th class="th-lg">
                    <a href="">Tên Sản Phẩm </a>
                  </th>
                  <th class="th-lg">
                    <a href="">Ngày Mua</a>
                  </th>

                  <th class="th-lg text-center">
                    <a href="">Tổng tiền</a>
                  </th>
                </tr>
              </thead>
              <!--Table head-->
              <!--Table body-->
              <tbody class="bidders">
                {{#each this.orders}}
                  <tr id={{OrderDetailID}} class="bidder" data-id="{{OrderDetailID}}">
                    <td>{{OrderDetailID}}</td>
                    <td>{{UserID}}</td>
                    <td>{{f_Name}}</td>
                    <td>{{ProName}}</td>
                    <td>{{OrderDate}}</td>
                    <td>{{Total}}</td>
                   
                    <td class="text-center p-0 d-flex justify-content-center">
      
                    </td>
                  </tr>
                {{/each}}
              </tbody>
              <!--Table body-->
            </table>
            <!--Table-->
          </div>
        {{/if}}
      </div>
    </div>
    </div>
</div>