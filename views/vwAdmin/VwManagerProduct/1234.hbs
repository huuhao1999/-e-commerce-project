<style>
    select{
        display: unset !important;
        font-weight: 400;
        border-radius: 10em;
    }
</style>
<script type="text/javascript" src="../../assets/js/ckeditor/ckeditor.js"></script>
<header>
    {{>home/header}}
</header>
<main>
    <div class="swiper-slide swiper-lazy swiper-lazy-loaded swiper-slide-active"
                        style="height:1050px;
                        background-image: url(&quot;../../images/bg_47.jpg&quot);
                        background-repeat: no-repeat;
                        background-attachment: fixed;
                        background-size:100%;
                        display: flex; justify-content: center;">
                        
        <div style="width: 50%;">
          {{#each sp}}
            <form action="/admin/qlsp/edit/{{ProID}}", method="POST">
                <div class="card">
                    <!--Header-->
                    <div class="header p-5 mt-5 peach-gradient">
                        <div class="row d-flex justify-content-center">
                            <h3 class="white-text font-weight-bold">Khóa Học</h3>
                        </div>
                    </div>
                    <div class="card-body mx-1 mt-1">
                    <!--Body-->
                    <div class="md-form">
                        <label for="Form-name">Tên khóa học</label></br>
                        <input type="text" id="Form-name" name="product_name" class="form-control" value="{{ProName}}">
                    </div>
                    <div class="md-form">

                    </div>
                    <div class="md-form">
                        <label for="Form-starting-price">Giá</label></br>
                        <input type="text" id="Form-starting-price" name="price" class="form-control" value="{{Price}}">
                    </div>
                    <div class="md-form">
                        <label for="Form-starting-price">Số lượng</label></br>
                        <input type="number" id="Form-starting-price" name="quantily" class="form-control" value="{{Quantity}}">
                    </div>
                    <div class="md-form">
                        <label for="description">Mô tả ngắn gọn</label></br>
                        <div class="form-group">
                        </div>
                        <textarea  id="editor" class="form-control md-textarea" name="product_tinydes" rows="5">{{TinyDes}}</textarea>
                    </div>
                    <div class="md-form">
                        <label for="description">Mô tả chi tiết</label></br>
                        <div class="form-group">
                        </div>
                        <textarea  id="editor" class="form-control md-textarea" name="product_fulldes" rows="5">{{FullDes}}</textarea>
                    </div>
                    <!--Grid row-->
                    <div class="row d-flex mb-4">
                        <!--Grid column-->
                        <div class="col-md-1 col-md-7 d-flex  ml-auto">
                            <div class="text-center">
                                <button type="submit" class="btn btn-grey btn-rounded z-depth-1a waves-effect waves-light">update</button>
                            </div>
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->
                </div>
            </form>
            {{/each}}
        </div>
    </div>
</main>

<footer>

    <i class="footer-bor" style="background:#acacac;opacity:.1;"></i>
    <div id="footer" class="footer wow slideInUp backcolor back-footer animated"
        style="background: rgb(236, 179, 90); visibility: visible; animation-name: slideInUp;">
        {{>home/bottom}}
    </div>
    <!-- /footer -->
    <script type="text/javascript">
        var qq_left = "3",
            qq_topbottom = 50;
        $(".kefu_q3 .default").on("click", function () {
            $(this).animate({
                "right": -120 + '%'
            }, 100);
            $(".default-hide").animate({
                "margin-right": 0
            }, 300);
        })
        $(".colse").on("click", function () {
            $(".default-hide").animate({
                "margin-right": -120 + '%'
            }, 100);
            $(".kefu_q3 .default").animate({
                "right": qq_left + 'px',
                "bottom": qq_topbottom + 'px'
            }, 300);
        })
    </script>   
</footer>